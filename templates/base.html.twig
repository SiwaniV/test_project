<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Wekom{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <!-- Custom styles for this template -->
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        <style>
            body{
                background-image: url("https://images.unsplash.com/photo-1477346611705-65d1883cee1e?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8ZGFyayUyMGxhbmRzY2FwZXxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&w=1000&q=80");
                background-repeat: no-repeat;
                background-size: cover;
                background-attachment: fixed;
            }


            .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

            .required {
                color: white;
            }

            .col-form-label {
                color: white;
            }
            label {
                color: white;
            }

        </style>

    </head>

    <body>


    <header>
        <nav class="navbar navbar-expand-lg navbar-light p-3 m-2">
            <a class="navbar-brand text-white disabled">Company name</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/test_project/public/default">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/test_project/public/blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/test_project/public/product">Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/test_project/public/admin">Admin</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    {% if sform is defined %}
                    {% include 'default/_form.html.twig' %}
                    {% endif %}
                    {% if app.user %}
                    <a class="btn btn-outline-light my-2 my-sm-0" href="{{ path('app_logout') }}">Sign out</a>
                    {% else %}
                    <a class="btn btn-outline-light my-2 my-sm-0" href="{{ path('app_login') }}">Sign up</a>
                    {% endif %}
                </form>
            </div>
        </nav>
    </header>

    <main class="container mt-4 p-3 mb-4">
        {% block body %}{% endblock %}
    </main>

        <footer class="container my-md-5 pt-md-5 border-top text-white">
            <div class="row">
                <div class="col-12 col-md">
                    <i class="bi bi-bootstrap"></i>
                    <small class="d-block mb-3 text-light mt-2">&copy; Siwani Veerakathy 2021</small>
                </div>
                <div class="col-6 col-md">
                    <h5>Features</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-light" href="#">Cool stuff</a></li>
                        <li><a class="text-light" href="#">Random feature</a></li>
                        <li><a class="text-light" href="#">Team feature</a></li>
                        <li><a class="text-light" href="#">Stuff for developers</a></li>
                        <li><a class="text-light" href="#">Another one</a></li>
                        <li><a class="text-light" href="#">Last time</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>Resources</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-light" href="#">Resource</a></li>
                        <li><a class="text-light" href="#">Resource name</a></li>
                        <li><a class="text-light" href="#">Another resource</a></li>
                        <li><a class="text-light" href="#">Final resource</a></li>
                    </ul>
                </div>

            </div>
        </footer>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
    </body>
</html>
