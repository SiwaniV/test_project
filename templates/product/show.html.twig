{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="text-white">Product</h1>

    <table class="table table-light">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ product.naam }}</td>
            </tr>
            <tr>
                <th>Prijs</th>
                <td>{{ product.prijs }}</td>
            </tr>
        </tbody>
    </table>

    <a class="text-light" href="{{ path('product_index') }}">back to list</a><br>

    <a class="text-light" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
